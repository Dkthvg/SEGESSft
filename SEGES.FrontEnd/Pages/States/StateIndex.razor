@page "/states"

<h3>Departamentos</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/states/create">Nuevo Departamento</a>
</div>

<GenericList2 MyList="States">

    <Loading>
        <div class="d-flex justify-content-center align-itmes-center">
            <img src="https://i.gifer.com/ZKZg.gif" alt="Cargando..." />
        </div>
    </Loading>

    <Body>
     
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Departamento</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var state in States!)
                {
                    <tr>
                        <td>@state.Name</td>

                        <td>
                            <a class="btn btn-warning btn-sm" href="/states/edit/@state.StateId">Editar</a>
                            <a class="btn btn-info btn-sm" href="/states/details/@state.StateId">Detalles</a>
                            <button class="btn btn-danger btn-sm" @onclick=@(() => DeleteAsync(state))>Borrar</button>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </Body>

</GenericList2>



